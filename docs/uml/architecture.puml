@startuml


package mtRooms {
    package "booking" {
        component BookingProcessing {
            interface IBookingProcess
            [BookingProcess]
            interface IOptimisedSearch
            [OptimisedSearch]

            IBookingProcess -- BookingProcess
            IOptimisedSearch -left- OptimisedSearch

            BookingProcess -left-( IOptimisedSearch
        }
    }

    package "revenue" {
        [RevenueReportGenerator]
        interface IRevenueReportGenerator
        [InvoiceSender]
        interface IInvoiceSender
        [PaymentProcessing]
        interface IPaymentProcessing

        IRevenueReportGenerator -- RevenueReportGenerator
        IInvoiceSender -- InvoiceSender
    }

    package "operation" {
        [LogisticReportGenerator]
        interface ILogisticReportGenerator

        ILogisticReportGenerator -- LogisticReportGenerator
    }

    package "data_access" {
        interface IBooking
        interface IBookingReport
        [Booking]
        interface ICustomerInfo
        [CustomerInfo]

        IBooking -- Booking
        IBookingReport -- Booking
        ICustomerInfo -- CustomerInfo
        IPaymentProcessing -- PaymentProcessing
    }

    BookingProcess -down-( IPaymentProcessing
    BookingProcess -down-( IBooking
    BookingProcess -down-( ICustomerInfo
    OptimisedSearch -down-( IBooking
    LogisticReportGenerator --( IBookingReport
    InvoiceSender --( IBookingReport
    InvoiceSender --( ICustomerInfo
    RevenueReportGenerator --( ICustomerRecords
    RevenueReportGenerator --( IPaymentRecords

    package "data" {
        interface ICustomerRecords
        interface IBookingRecords
        interface IPaymentRecords
        database Database

        ICustomerRecords -down- Database
        IBookingRecords -down- Database
        IPaymentRecords -down- Database
    }

    Booking --( IBookingRecords
    CustomerInfo --( ICustomerRecords
    CustomerInfo --( IPaymentRecords
    CustomerInfo --( IBookingRecords
    PaymentProcessing --( IPaymentRecords
}

@enduml